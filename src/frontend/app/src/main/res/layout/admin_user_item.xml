<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/admin_name"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="NoName"
            android:padding="10dp">
        </TextView>
        <TextView
            android:id="@+id/admin_cat_name"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_toEndOf="@id/admin_name"
            android:text="UserLevel"
            android:padding="10dp">
        </TextView>

        <Button
            android:id="@+id/admin_agree_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/admin_refuse_button"
            android:background="@drawable/agree"
            android:padding="10dp" />

        <Button
            android:id="@+id/admin_refuse_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/refuse"
            android:padding="10dp" />

    </RelativeLayout>


</LinearLayout>