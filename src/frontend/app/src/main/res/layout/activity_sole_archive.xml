<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/sole_archive_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dp"
        android:layout_gravity="center"
        android:textColor="#262626"
        android:text="山岚"
        android:textSize="27dp"/>

    <ImageView
        android:id="@+id/sole_archive_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/catexp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#262626"
        android:text="昵称：女皇\n毛色：长毛灰\n性别：母\n状况：送养\n绝育情况：已绝育\n绝育时间：2019-07-09\n外貌：瘦，近似美短的灰色+黑纹\n性格：亲人可抱\n第一次目击时间：2019-05-24"
        android:textSize="20dp"/>


</LinearLayout>